<?xml version="1.0" encoding="utf-8" ?>
<data>
	<text x="0%" y="20%" width="100%" name="game_title" text="Game Title" size="40" align="center" />
	<button x="50%" name="play_button" label="Play" align="center">
		<param type="string" value="play"/>
	</button>

	<button x="50%" name="credits_button" label="Credits" align="center">
		<param type="string" value="credits"/>
	</button>

	<align axis="vertical" spacing="2" resize="false">
		<!-- May need to add space if we want more objects in this alignment -->
		<bounds top="80%" bottom="90%"/>
		<objects value="play_button,credits_button"/>
	</align>
</data>